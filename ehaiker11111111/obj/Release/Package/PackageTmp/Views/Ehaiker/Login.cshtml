<div id="login"class="row justify-content-center align-items-center">
    <form class="col-xl-3  col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-4 ">
        <div class="header">
            会员后台管理系统
        </div>
        <span class="help-block login-error">
        </span>
        <input type="text" class="form-control" id="loginName" placeholder="请输入账号" v-model="account">
        <input type="password" class="form-control" id="password" placeholder="请输入密码" v-model="pwd">
        <div class="form-group">
            <div class="col-sm-6 col-md-6 col-lg-6" style="padding:0;">
                <input id="code" class="form-control" placeholder="请输入右边验证码" />
            </div>
            <div class="col-sm-5 col=md-5 col-lg-5">
                <a class="yzm-pic" style="display:block; float:left"><img class="J_validate_code" id="J_validate_code" src="/EHaiker/GetValidateCode" width="88" height="32"></a>
            </div>
        </div>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" href="/register/index">注册账号</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">忘记密码</a>
            </li>
        </ul>
        <button type="button" class="btn btn-default col-lg-12" id="submit">登录</button>
    </form>
</div>
<script>
    $(function () {
        $("#submit").on("click",
            function (o) {
                o.stopPropagation();
                var n = $("#loginName").val(),
                    t = $("#password").val(),
                    r = $("#code").val(),
                    c = false;//$("#isAuto").prop("checked");
                //ajax提交
                $.ajax(
                    {
                        url: "/EHaiker/memshiplogin",
                        type: "post",
                        data: {
                            ehaiker_parameter: JSON.stringify(
                                {
                                    c: "Index",
                                    fun: "login",
                                    account: n,
                                    password: t,
                                    verificat_code: r,
                                    is_auto: c
                                })
                        },
                        dataType: "json",
                        success: function (o) {
                            if (o.SuccessCode == "0") {
                               window.location.href = "../Personal/Index";
                                return;
                            }
                            else {
                                $("#header-login-info").attr("href", o.UserInfoUrl);
                                $(".login-error").text(o.msg).show();
                            }

                        }
                        ,
                        error: function (o) {
                            e("J_validate_code");
                            $(".login-error").text(o.msg).show();
                        }

                    }); //ajax
            });
        $("#code,#J_validate_code").on("click", function (o) {
            o.stopPropagation();
            if ("" != $(".J_validate_code").attr("src")) {
                var n = Date.parse(new Date);
                $(".J_validate_code").attr("src", "/EHaiker/GetValidateCode?t=" + n);
                $(".yzm-pic").show();
            }
        });
    });
</script>

