@{
    Layout = null;
}

<!DOCTYPE html><html>
<head>
    <title>网站后台管理系统</title>
   <link rel="stylesheet" type="text/css" href="../../Content/themes/default/easyui.css"/>
     @*<link rel="stylesheet" type="text/css" href="../../Content/themes/black/easyui.css"/>*@
    <link rel="stylesheet" type="text/css" href="../../Content/themes/icon.css"/>
    <script charset=utf-8 language="javascript" src ="../common/js/jquery.min.js"></script>
    <script charset=utf-8 language="javascript" src ="../../Scripts/EASYUI/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="../../Content/themes/locale/easyui-lang-zh_CN.js"></script>
</head>
<body>
        <div id="cc" class="easyui-layout" style="width:100%;height:auto;" data-options="fit:true,border:false">
        <!--导航-->
        <div data-options="region:'north'" style="height:80px;">
        <table style="padding: 5px" width="100%">
			<tr>
				<td>
					<h1>网站后台管理系统</h1>
				</td>
				<td valign="bottom" align="right"><font size="5"><strong>欢迎：</strong><a href="/">www.ehaiker.com</a> 
				</font></td>
			</tr>
		</table>
        </div>
        <!--底部-->
        <div data-options="region:'south'" style="height: 30px; padding: 5px; background-color: #377aab;" align="center">
        <div>
			<strong>© CopyRight   2018-2019   ecsuperpay#163dotcom
				  版权所有</strong>
		</div>

        </div>
        <!--右边侧栏-->
       <!-- <div data-options="region:'east',split:true" style="width:20%;"></div>-->
        <!---左侧菜单树 ---->
        <div data-options="region:'west',title:'功能入口',split:true" style="width:250px;">
        <div class="easyui-accordion" data-options="fit:true,border:false">
            <div title="充值中心" data-options="iconCls:'icon-ok'"
				style="padding: 10px">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px;" id="PayBillInfo" >支付凭证管理</a>
			</div>
            <div title="任务分享管理" data-options="iconCls:'icon-ok'"
				style="padding: 10px;">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-edit'" style="width: 150px;" id="GameListOnLine">试玩上线</a>
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px;">头条管理</a>
			</div>
			<div title="新闻中心" data-options="selected:true,iconCls:'icon-ok'"
				style="padding: 10px">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-edit'" style="width: 150px" id="ReleaseNews">发布公告</a>
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px" id="newsManager">公告管理</a>
			</div>
            <div title="管理员管理" data-options="selected:true,iconCls:'icon-ok'"
				style="padding: 10px">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-edit'" style="width: 150px" id="ManagerInfo">管理员信息</a>
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px" id="ManagerRights">权限管理</a>
			</div>

			<div title="会员系统" data-options="iconCls:'icon-ok'"
				style="padding: 10px">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px;" id="MemberInfo" >会员信息</a>
			</div>

			<div title="个人信息管理" data-options="iconCls:'icon-ok'"
				style="padding: 10px">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-mini-edit'"
					style="width: 150px;">修改个人信息</a> 
                    <a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-mini-edit'"
					style="width: 150px;">修改密码</a>
                     <a href="../AdminHome/Logout" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-mini-edit'"
					style="width: 150px;">退出系统</a>
			</div>
			<div title="试玩分享管理" data-options="iconCls:'icon-ok'"
				style="padding: 10px;">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-edit'" style="width: 150px;">写试玩分享</a>
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px;">文章信息管理</a>
			</div>
			<div title="评论管理" data-options="iconCls:'icon-ok'"
				style="padding: 10px">
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-ok'" style="width: 150px">评论审核</a>
				<a href="#" class="easyui-linkbutton"
					data-options="plain:true,iconCls:'icon-tip'" style="width: 150px;">评论信息管理</a>
			</div>

			
		</div>

        </div>
        <!-- 中心区域-->
        <div data-options="region:'center'" style="padding:0px;background:#eee;">
            <div id="mainTab" class="easyui-tabs" style="width:100%;height:100%;overflow:hidden;">
                <div title="www.ehaiker.com" style="padding:20px;display:none;overflow:hidden;" id="ghj">
                    <iframe src="../GameStrategies" style="width:100%;height:100%;overflow:hidden;" id='ganid' scrolling=auto  ></iframe>
                </div> 
            </div>
        </div>
        <!--这是一个弹出窗口easyui-dialog，我在它里面放了一个datagrid-->
      </div>
</body>
<script language=javascript src="../../common/js/AdminHome.js"></script>
</html>
