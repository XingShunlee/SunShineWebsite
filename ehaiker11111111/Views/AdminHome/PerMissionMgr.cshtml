@{
    Layout = null;
    ViewBag.Title = "PerMissionMgr";
    var pList = ViewBag.PerList as List<ehaiker.Auth.MenuItem>;
}
@model ehaiker.Auth.Permission
<!DOCTYPE html><html>
<head>
<link rel="stylesheet" type="text/css" href="../../Content/themes/default/easyui.css"/>
    <link rel="stylesheet" type="text/css" href="../../Content/themes/icon.css"/>
    <script charset=utf-8 language="javascript" src ="../common/js/jquery.min.js"></script>
    <script charset=utf-8 language="javascript" src ="../../Scripts/EASYUI/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="../../Content/themes/locale/easyui-lang-zh_CN.js"></script>
    <script charset=utf-8 language="javascript" src ="../../Scripts/Permissions.js"></script>
 </head>

<body>
<div style="float:left;">管理组:<select id="roleList" class="selectpicker">
 <option value="-1">请选择</option>
    @foreach (var item in ViewBag.RoleList)
    {
        <option value="@item.Id">@item.Name</option>
    }
</select></div>
<div style="float:left;@(ViewBag.isSp?"display:none":"") ">人员：<select id="adminList" class="selectpicker" >
 <option value="-1">请选择</option>
    @foreach (var item in ViewBag.admin)
    {
        <option value="@item.AdministratorID">@item.Account</option>
    }
</select></div>
<div style="float:left;clear:both;min-width:70%">
<div id="Usertool" style="float:left;clear:both;">
        <a id="btnAdminLoad" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add'" style="@(ViewBag.isSp ? "display:block" : "display:none");width:120px;float:left;">初始化组</a>
        <a id="btnAdminAdd" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-add'" style="@(ViewBag.isSp ? "display:block" : "display:none");width:120px;float:left;">添加组</a>
        <a id="btnAdminDisp" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-edit'" style="@(ViewBag.isSp ? "display:block" : "display:none");width:120px;float:left; ">权限分配</a>
        <a id="btnAdminSave" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-edit'" style="@(ViewBag.isSp ? "display:none" : "display:block");float:left; ">保存</a>
  </div>
    <table id="PerGrid"></table>
    <div id="ddGroupAdd" style="display:none">
      <div style="width:250px; margin:auto;">
            <p>组名：<input class="easyui-textbox" style="width:200px" id="groupname" /></p>
            <p>描述：<input class="easyui-textbox" style="width:200px" id="groupdesc" /></p>
            <a id="btnGronpSave" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-save'">增加</a>
      </div>
        
   </div>
</div>
</body>